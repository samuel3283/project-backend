@Library('jenkins_shared_library@master')
import pe.com.sura.services.JenkinsCloudFormation
def pipeline = new JenkinsCloudFormation(this)


//DEFINE PARAMETER S3
def var_project="APP001"
def var_environment="DEV"

//DEFINE TAGS
def project="APP001"
def environment="DEV"

node {

   stage('Preparation') {
      checkout scm
      pipeline.configure()
      env.project="${project}"
   }
   stage('Deploy') {
      pipeline.deployIaC()
   }

}

